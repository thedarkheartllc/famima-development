rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all people documents (for public gallery viewing)
    match /people/{personId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to all photos (for public gallery viewing)
    match /photos/{photoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
