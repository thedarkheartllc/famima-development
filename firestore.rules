rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all people documents (for public gallery viewing)
    match /people/{personId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Private family galleries - only family members can access their photos
    match /photos/{photoId} {
      allow read, write: if request.auth != null && 
        resource.data.familyId == request.auth.uid;
    }
    
    // Allow authenticated users to create and read their own family documents
    match /families/{familyId} {
      allow read, write: if request.auth != null && request.auth.uid == familyId;
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
