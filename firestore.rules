rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // People documents - only family members can access their people
    match /people/{personId} {
      allow read, write, delete: if request.auth != null &&
        (resource.data.familyId == request.auth.uid || 
         request.resource.data.familyId == request.auth.uid);
    }
    
    // Photos - allow public read access for shared galleries
    match /photos/{photoId} {
      allow read: if true;  // Allow public read access
      allow write, delete: if request.auth != null && 
        (resource.data.familyId == request.auth.uid ||
         request.resource.data.familyId == request.auth.uid);
    }
    
    // Share links - public read access
    match /shareLinks/{shareId} {
      allow read: if true;  // Public read access
      allow write, delete: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         request.resource.data.createdBy == request.auth.uid);
    }
    
    // Allow authenticated users to create and read their own family documents
    match /families/{familyId} {
      allow read, write: if request.auth != null && request.auth.uid == familyId;
    }
    
    // Default rule: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
