rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Family-based photo storage - only family members can access their photos
    match /families/{familyId}/photos/{personId}/{photoId} {
      allow read, write: if request.auth != null && 
        familyId == request.auth.uid;
    }
    
    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
